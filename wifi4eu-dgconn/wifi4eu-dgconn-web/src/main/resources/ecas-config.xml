<?xml version="1.0" encoding="UTF-8" ?>
<client-config
        xmlns="https://ecas.ec.europa.eu/cas/schemas/client-config/ecas/"
        xmlns:cas="https://ecas.ec.europa.eu/cas/schemas/client-config/cas/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://ecas.ec.europa.eu/cas/schemas/client-config/ecas/ https://ecas.ec.europa.eu/cas/schemas/client-config/ecas/
                           https://ecas.ec.europa.eu/cas/schemas/client-config/cas/ https://ecas.ec.europa.eu/cas/schemas/client-config/cas/">

    <!--<httpRedirector>eu.europa.ec.digitb3.mvc.web.security.ecas.HttpRedirectorSupport</httpRedirector>-->

    <!--<serviceResolver>eu.cec.digit.ecas.client.resolver.service.ReverseProxyAwareServiceResolver</serviceResolver>-->


    <serverContextPath>${dgconn.context.name}</serverContextPath>

    <requestingUserDetails>true</requestingUserDetails>

    <!--
    <extraGroupHandler>wifi4eu.wifi4eu.common.util.ecas.RbacEcasExtraGroupHandler</extraGroupHandler>
    -->

    <ecasBaseUrl>${ecas.config.base.url.dgconn}</ecasBaseUrl>
    <assuranceLevel>${ecas.config.assuranceLevel}</assuranceLevel>
    <serverProtocol>${schemes}</serverProtocol>
    <cas:serverName>${ecas.server.dgconn.address}</cas:serverName>
    <serverPort>${ecas.server.port}</serverPort>
    <serverSSLPort>${ecas.server.port}</serverSSLPort>

    <applicationServer>tomcat</applicationServer>

        <acceptStrengths>
            <strength>${ecas.config.strength.dgconn}</strength>
        </acceptStrengths>

    <!-- maxConnections equal to the Tomcat threads per instance -->
    <maxConnections>200</maxConnections>
    <connectionTimeout>180000</connectionTimeout>

    <!--
            <cas:renew>${ecas.config.renew}</cas:renew>


            ${ecas.config.validate.load_test_specific}

            ${ecas.config.test.certificate.element}
            -->

</client-config>